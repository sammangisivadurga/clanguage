#include <stdio.h>
#include<string.h>

int main()
{
    char str[50];
    int i,l,flag;
    printf("enter string\n");
    scanf("%s",str);
    l=strlen(str);
    for(i=0;i<(l-1)/2;i++)
    {
        if(str[i]!=str[l-1-i])
        {
            flag=0;
            break;
    }
    }
    if(flag==0)
    {
        printf("the string is not palindrom");
    }
    else
    {
        printf("the string is palindrom");
    }
    return 0;
}
